[core]
	editor = vim
	ignorecase = false
	excludesfile = ~/.gitignore_global
    pager = delta --color-only --plus-color="#013600" --plus-emph-color="#039900"
[interactive]
    diffFilter = delta --color-only --plus-color="#013600" --plus-emph-color="#039900"
[color]
	ui = auto
[alias]
	br = branch
	st = status
	rs = reset
	ps = push
	pl = pull
	rb = rebase
	co = commit
	d = diff
	br-current = rev-parse --abbrev-ref HEAD
	branch-root = merge-base master HEAD
	ps-head = push -u origin head --force-with-lease
	pl-master = pull origin master
	pl-develop = pull origin develop
	root = rev-parse --show-toplevel
[user]
	name = Shin Yamamoto
	email = shin@scenee.com
[rebase]
	autosquash = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[credential]
	helper = osxkeychain
[include]
	path = ~/.gitconfig.local
[pager]
	branch = false
[log]
	follow = true
[pull]
	ff = only
[init]
	defaultBranch = main

